<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content" android:padding="20dp"
        android:layout_height="wrap_content"
        android:text="图片路径" />
    <EditText
        android:layout_width="match_parent" android:paddingLeft="5dp"
        android:layout_height="wrap_content" android:id="@+id/acress"/>
    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content" android:text="下载"
            android:layout_height="wrap_content" android:id="@+id/download"
            android:layout_marginLeft="50dp"/>
        <Button
            android:layout_width="wrap_content" android:text="重置"
            android:layout_height="wrap_content" android:id="@+id/reset"
            android:layout_marginLeft="100dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/picture" android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
